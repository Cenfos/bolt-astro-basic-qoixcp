---
import { changeLanguage } from "i18next";
import Layout from '../layouts/Layout.astro';
import { t } from "i18next";

changeLanguage("en");
---

<Layout title={t('contact.title')}>
	<h1 class="text-4xl font-bold text-center mb-8 text-gray-800 dark:text-white">
		{t('contact.title')}
	</h1>
	<div class="max-w-md mx-auto bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
		<form>
			<div class="mb-4">
				<label for="name" class="block text-gray-700 dark:text-gray-300 mb-2">{t('contact.name')}</label>
				<input type="text" id="name" name="name" class="w-full px-3 py-2 border rounded-lg text-gray-700 dark:text-gray-300 dark:bg-gray-800" required>
			</div>
			<div class="mb-4">
				<label for="email" class="block text-gray-700 dark:text-gray-300 mb-2">{t('contact.email')}</label>
				<input type="email" id="email" name="email" class="w-full px-3 py-2 border rounded-lg text-gray-700 dark:text-gray-300 dark:bg-gray-800" required>
			</div>
			<div class="mb-4">
				<label for="message" class="block text-gray-700 dark:text-gray-300 mb-2">{t('contact.message')}</label>
				<textarea id="message" name="message" rows="4" class="w-full px-3 py-2 border rounded-lg text-gray-700 dark:text-gray-300 dark:bg-gray-800" required></textarea>
			</div>
			<button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600">{t('contact.submit')}</button>
		</form>
	</div>
</Layout>