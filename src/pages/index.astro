---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('home.title')}>
	<h1 class="text-4xl font-bold text-center mb-8 text-gray-800 dark:text-white">
		{t('home.welcome')}
	</h1>
	<p class="text-lg text-center mb-8 text-gray-600 dark:text-gray-300">
		{t('home.description')}
	</p>
	
	<div class="grid md:grid-cols-2 gap-8">
		<div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
			<h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-white">{t('home.services')}</h2>
			<ul class="list-disc list-inside text-gray-600 dark:text-gray-300">
				<li>{t('home.service1')}</li>
				<li>{t('home.service2')}</li>
				<li>{t('home.service3')}</li>
			</ul>
		</div>
		<div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
			<h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-white">{t('home.whyUs')}</h2>
			<ul class="list-disc list-inside text-gray-600 dark:text-gray-300">
				<li>{t('home.reason1')}</li>
				<li>{t('home.reason2')}</li>
				<li>{t('home.reason3')}</li>
			</ul>
		</div>
	</div>
</Layout>