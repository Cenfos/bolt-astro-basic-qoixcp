---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);
---

<Layout title={t('clients.title')}>
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-4xl font-bold text-center mb-8 text-gray-800 dark:text-white">
			{t('clients.title')}
		</h1>
		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
			<div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
				<img src="https://via.placeholder.com/300x200?text=Global+Corp" alt="Global Corp" class="w-full h-40 object-cover mb-4 rounded">
				<h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-white">{t('clients.client1')}</h2>
				<p class="text-gray-600 dark:text-gray-300">{t('clients.client1Desc')}</p>
			</div>
			<div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
				<img src="https://via.placeholder.com/300x200?text=Tech+Innovators" alt="Tech Innovators" class="w-full h-40 object-cover mb-4 rounded">
				<h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-white">{t('clients.client2')}</h2>
				<p class="text-gray-600 dark:text-gray-300">{t('clients.client2Desc')}</p>
			</div>
			<div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
				<img src="https://via.placeholder.com/300x200?text=Legal+Experts" alt="Legal Experts" class="w-full h-40 object-cover mb-4 rounded">
				<h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-white">{t('clients.client3')}</h2>
				<p class="text-gray-600 dark:text-gray-300">{t('clients.client3Desc')}</p>
			</div>
		</div>
	</div>
</Layout>