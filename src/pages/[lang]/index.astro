---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);
---

<Layout title={t('home.title')}>
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-4xl font-bold text-center mb-8 text-gray-800 dark:text-white">
			{t('home.welcome')}
		</h1>
		<div class="flex flex-col md:flex-row items-center justify-between mb-12">
			<div class="md:w-1/2 mb-6 md:mb-0">
				<img src="https://via.placeholder.com/600x400?text=InterpretingBooth" alt="InterpretingBooth" class="rounded-lg shadow-md">
			</div>
			<div class="md:w-1/2 md:pl-8">
				<p class="text-lg mb-4 text-gray-600 dark:text-gray-300">
					{t('home.description')}
				</p>
				<a href={`/${lang}/services`} class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition duration-300">
					{t('home.learnMore')}
				</a>
			</div>
		</div>
		<div class="grid md:grid-cols-2 gap-8">
			<div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
				<h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-white">{t('home.services')}</h2>
				<ul class="list-disc list-inside text-gray-600 dark:text-gray-300">
					<li>{t('home.service1')}</li>
					<li>{t('home.service2')}</li>
					<li>{t('home.service3')}</li>
				</ul>
			</div>
			<div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md">
				<h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-white">{t('home.whyUs')}</h2>
				<ul class="list-disc list-inside text-gray-600 dark:text-gray-300">
					<li>{t('home.reason1')}</li>
					<li>{t('home.reason2')}</li>
					<li>{t('home.reason3')}</li>
				</ul>
			</div>
		</div>
	</div>
</Layout>